{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "types": ["vitest/globals", "node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["cli/src/*"],
      "@tests/*": ["tests/*"],
      "@cli/*": ["cli/src/*"]
    }
  },
  "include": [
    "cli/src/**/*",
    "tests/**/*",
    "vitest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "cli/dist",
    "**/*.test.ts"
  ]
}

